"use client";

import React, { useState, useEffect } from "react";
import { motion, AnimatePresence } from "framer-motion";
import {
  TrendingUp,
  TrendingDown,
  Plus,
  Receipt,
  DollarSign,
  Wallet,
  ArrowUpRight,
  ArrowDownRight,
  Upload,
  X,
  LogOut,
} from "lucide-react";
import Link from "next/link";
import { useRouter } from "next/navigation";
import { useTheme } from "next-themes";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card } from "@/components/ui/card";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import { toast } from "sonner";
import {
  AreaChart,
  Area,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  ResponsiveContainer,
} from "recharts";

const CATEGORIES = [
  "housing",
  "transportation",
  "groceries",
  "utilities",
  "entertainment",
  "food",
  "shopping",
  "healthcare",
  "education",
  "personal",
  "travel",
  "insurance",
  "gifts",
  "bills",
  "other-expense",
];

export default function DashboardPage() {
  const router = useRouter();
  const { theme } = useTheme();
  const [showAddExpense, setShowAddExpense] = useState(false);
  const [showReceiptScanner, setShowReceiptScanner] = useState(false);
  const [whatIfAmount, setWhatIfAmount] = useState("");
  const [mounted, setMounted] = useState(false);

  // Mock data
  const [currentBalance] = useState(52500);
  const [monthlyIncome] = useState(75000);
  const [monthlyExpenses] = useState(45000);
  const [predictedBalance] = useState(57500);
  
  const [expenses, setExpenses] = useState([
    { id: 1, amount: 2500, category: "food", description: "Grocery shopping", date: "2024-01-06" },
    { id: 2, amount: 1200, category: "transportation", description: "Fuel", date: "2024-01-05" },
    { id: 3, amount: 3500, category: "utilities", description: "Electric bill", date: "2024-01-04" },
  ]);

  // Chart data
  const cashFlowData = [
    { day: "1", balance: 50000 },
    { day: "5", balance: 48500 },
    { day: "10", balance: 51200 },
    { day: "15", balance: 52500 },
    { day: "20", balance: 54800 },
    { day: "25", balance: 56200 },
    { day: "30", balance: 57500 },
  ];

  const [expenseForm, setExpenseForm] = useState({
    amount: "",
    category: "",
    description: "",
    date: new Date().toISOString().split("T")[0],
  });

  const [receiptScanning, setReceiptScanning] = useState(false);

  useEffect(() => {
    setMounted(true);
  }, []);

  const handleAddExpense = (e) => {
    e.preventDefault();
    const newExpense = {
      id: Date.now(),
      amount: parseFloat(expenseForm.amount),
      category: expenseForm.category,
      description: expenseForm.description,
      date: expenseForm.date,
    };
    setExpenses([newExpense, ...expenses]);
    toast.success("Expense added successfully!");
    setExpenseForm({
      amount: "",
      category: "",
      description: "",
      date: new Date().toISOString().split("T")[0],
    });
    setShowAddExpense(false);
  };

  const handleReceiptScan = async (e) => {
    const file = e.target.files[0];
    if (!file) return;

    if (file.size > 5 * 1024 * 1024) {
      toast.error("File size should be less than 5MB");
      return;
    }

    setReceiptScanning(true);

    try {
      const formData = new FormData();
      formData.append("file", file);

      const response = await fetch("/api/scan-receipt", {
        method: "POST",
        body: formData,
      });

      if (!response.ok) {
        throw new Error("Failed to scan receipt");
      }

      const data = await response.json();
      
      // Add scanned expense
      const newExpense = {
        id: Date.now(),
        amount: data.amount,
        category: data.category,
        description: data.description || data.merchantName,
        date: data.date ? new Date(data.date).toISOString().split("T")[0] : new Date().toISOString().split("T")[0],
      };
      
      setExpenses([newExpense, ...expenses]);
      toast.success("Receipt scanned and expense added!");
      setShowReceiptScanner(false);
    } catch (err) {
      console.error("Error scanning receipt:", err);
      toast.error("Failed to scan receipt. Please try again.");
    } finally {
      setReceiptScanning(false);
    }
  };

  const calculateWhatIf = () => {
    const amount = parseFloat(whatIfAmount) || 0;
    const impact = predictedBalance - amount;
    return {
      impact,
      percentage: ((amount / currentBalance) * 100).toFixed(1),
    };
  };

  const whatIf = calculateWhatIf();

  const handleLogout = () => {
    toast.success("Logged out successfully!");
    router.push("/");
  };

  if (!mounted) {
    return null;
  }

  return (
    <div className="min-h-screen bg-background">
      {/* Top Nav */}
      <nav className="border-b border-border bg-background/80 backdrop-blur-lg sticky top-0 z-50">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex items-center justify-between h-16">
            <Link href="/" className="flex items-center space-x-2">
              <div className="w-8 h-8 bg-gradient-to-br from-teal-500 via-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                <span className="text-white font-bold text-lg">â‚¹</span>
              </div>
              <span className="text-xl font-bold gradient-title">SpendAhead</span>
            </Link>
            
            <Button
              variant="ghost"
              onClick={handleLogout}
              className="text-muted-foreground hover:text-foreground"
            >
              <LogOut className="w-4 h-4 mr-2" />
              Logout
            </Button>
          </div>
        </div>
      </nav>

      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        {/* Header */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="mb-8"
        >
          <h1 className="text-4xl font-bold mb-2">
            Welcome back, <span className="gradient-title">User</span>
          </h1>
          <p className="text-lg text-muted-foreground">
            Here&apos;s your financial forecast for this month
          </p>
        </motion.div>

        {/* Key Metrics */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.1 }}
          >
            <Card className="p-6 glassmorphism card-hover border-2 border-teal-500/30">
              <div className="flex items-center justify-between mb-4">
                <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-teal-500 to-teal-600 flex items-center justify-center animate-pulse-glow">
                  <TrendingUp className="w-6 h-6 text-white" />
                </div>
                <span className="text-xs font-medium text-green-500 flex items-center gap-1">
                  <ArrowUpRight className="w-4 h-4" />
                  +8.5%
                </span>
              </div>
              <p className="text-sm text-muted-foreground mb-1">
                Predicted Month-End
              </p>
              <p className="text-4xl font-bold gradient-title mb-2">
                â‚¹{predictedBalance.toLocaleString()}
              </p>
              <p className="text-xs text-muted-foreground">
                Based on current trends
              </p>
            </Card>
          </motion.div>

          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.2 }}
          >
            <Card className="p-6 glassmorphism card-hover">
              <div className="flex items-center justify-between mb-4">
                <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
                  <Wallet className="w-6 h-6 text-white" />
                </div>
              </div>
              <p className="text-sm text-muted-foreground mb-1">
                Current Balance
              </p>
              <p className="text-3xl font-bold mb-2">
                â‚¹{currentBalance.toLocaleString()}
              </p>
              <p className="text-xs text-muted-foreground">Today</p>
            </Card>
          </motion.div>

          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.3 }}
          >
            <Card className="p-6 glassmorphism card-hover">
              <div className="flex items-center justify-between mb-4">
                <div className="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center">
                  <DollarSign className="w-6 h-6 text-white" />
                </div>
                <span className="text-xs font-medium text-amber-500 flex items-center gap-1">
                  <ArrowDownRight className="w-4 h-4" />
                  Monthly
                </span>
              </div>
              <p className="text-sm text-muted-foreground mb-1">
                Total Expenses
              </p>
              <p className="text-3xl font-bold mb-2">
                â‚¹{monthlyExpenses.toLocaleString()}
              </p>
              <p className="text-xs text-muted-foreground">
                {((monthlyExpenses / monthlyIncome) * 100).toFixed(0)}% of income
              </p>
            </Card>
          </motion.div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          {/* Main Column */}
          <div className="lg:col-span-2 space-y-6">
            {/* Cash Flow Chart */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.4 }}
            >
              <Card className="p-6 glassmorphism">
                <h3 className="text-xl font-bold mb-6 flex items-center gap-2">
                  <TrendingUp className="w-5 h-5 text-teal-500" />
                  Cash Flow Forecast
                </h3>
                <ResponsiveContainer width="100%" height={300}>
                  <AreaChart data={cashFlowData}>
                    <defs>
                      <linearGradient id="colorBalance" x1="0" y1="0" x2="0" y2="1">
                        <stop
                          offset="5%"
                          stopColor="hsl(180, 100%, 35%)"
                          stopOpacity={0.3}
                        />
                        <stop
                          offset="95%"
                          stopColor="hsl(180, 100%, 35%)"
                          stopOpacity={0}
                        />
                      </linearGradient>
                    </defs>
                    <CartesianGrid
                      strokeDasharray="3 3"
                      stroke={theme === "dark" ? "#333" : "#e0e0e0"}
                    />
                    <XAxis
                      dataKey="day"
                      stroke={theme === "dark" ? "#999" : "#666"}
                      style={{ fontSize: "12px" }}
                    />
                    <YAxis
                      stroke={theme === "dark" ? "#999" : "#666"}
                      style={{ fontSize: "12px" }}
                    />
                    <Tooltip
                      contentStyle={{
                        backgroundColor: theme === "dark" ? "#1f2937" : "#fff",
                        border: "1px solid #ccc",
                        borderRadius: "8px",
                      }}
                    />
                    <Area
                      type="monotone"
                      dataKey="balance"
                      stroke="hsl(180, 100%, 35%)"
                      strokeWidth={3}
                      fill="url(#colorBalance)"
                      animationDuration={2000}
                    />
                  </AreaChart>
                </ResponsiveContainer>
              </Card>
            </motion.div>

            {/* What-If Simulator */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.5 }}
            >
              <Card className="p-6 glassmorphism">
                <h3 className="text-xl font-bold mb-4 flex items-center gap-2">
                  <TrendingDown className="w-5 h-5 text-purple-500" />
                  What-If Simulator
                </h3>
                <p className="text-sm text-muted-foreground mb-4">
                  Test how a purchase would impact your month-end balance
                </p>
                <div className="space-y-4">
                  <div>
                    <label className="block text-sm font-medium mb-2">
                      Potential Expense (â‚¹)
                    </label>
                    <Input
                      type="number"
                      placeholder="Enter amount"
                      value={whatIfAmount}
                      onChange={(e) => setWhatIfAmount(e.target.value)}
                      className="h-12"
                    />
                  </div>
                  {whatIfAmount && (
                    <motion.div
                      initial={{ opacity: 0, height: 0 }}
                      animate={{ opacity: 1, height: "auto" }}
                      className="p-4 rounded-lg bg-muted/50 border border-border"
                    >
                      <div className="flex items-center justify-between mb-2">
                        <span className="text-sm font-medium">
                          New Month-End Balance:
                        </span>
                        <span className="text-2xl font-bold gradient-title">
                          â‚¹{whatIf.impact.toLocaleString()}
                        </span>
                      </div>
                      <div className="flex items-center justify-between">
                        <span className="text-xs text-muted-foreground">
                          Impact on savings:
                        </span>
                        <span
                          className={`text-sm font-medium ${
                            whatIf.impact < currentBalance
                              ? "text-amber-500"
                              : "text-green-500"
                          }`}
                        >
                          -{whatIf.percentage}%
                        </span>
                      </div>
                    </motion.div>
                  )}
                </div>
              </Card>
            </motion.div>

            {/* Recent Expenses */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.6 }}
            >
              <Card className="p-6 glassmorphism">
                <h3 className="text-xl font-bold mb-4 flex items-center gap-2">
                  <Receipt className="w-5 h-5 text-blue-500" />
                  Recent Expenses
                </h3>
                <div className="space-y-3">
                  {expenses.map((expense, index) => (
                    <motion.div
                      key={expense.id}
                      initial={{ opacity: 0, x: -20 }}
                      animate={{ opacity: 1, x: 0 }}
                      transition={{ delay: index * 0.1 }}
                      className="flex items-center justify-between p-3 rounded-lg bg-muted/30 hover:bg-muted/50 transition-colors"
                    >
                      <div className="flex items-center gap-3">
                        <div className="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center">
                          <Receipt className="w-5 h-5 text-white" />
                        </div>
                        <div>
                          <p className="font-medium">{expense.description}</p>
                          <p className="text-xs text-muted-foreground">
                            {new Date(expense.date).toLocaleDateString()} â€¢{" "}
                            {expense.category}
                          </p>
                        </div>
                      </div>
                      <span className="text-lg font-bold">
                        â‚¹{expense.amount.toLocaleString()}
                      </span>
                    </motion.div>
                  ))}
                </div>
              </Card>
            </motion.div>
          </div>

          {/* Sidebar */}
          <div className="space-y-6">
            {/* Quick Actions */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.7 }}
            >
              <Card className="p-6 glassmorphism">
                <h3 className="text-lg font-bold mb-4">Quick Actions</h3>
                <div className="space-y-3">
                  <Button
                    onClick={() => setShowAddExpense(true)}
                    className="w-full bg-gradient-to-r from-teal-600 to-blue-600 hover:from-teal-700 hover:to-blue-700 text-white"
                  >
                    <Plus className="w-4 h-4 mr-2" />
                    Add Expense
                  </Button>
                  <Button
                    onClick={() => setShowReceiptScanner(true)}
                    variant="outline"
                    className="w-full"
                  >
                    <Receipt className="w-4 h-4 mr-2" />
                    Scan Receipt
                  </Button>
                </div>
              </Card>
            </motion.div>

            {/* Monthly Summary */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.8 }}
            >
              <Card className="p-6 glassmorphism">
                <h3 className="text-lg font-bold mb-4">Monthly Summary</h3>
                <div className="space-y-4">
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-muted-foreground">Income</span>
                    <span className="font-semibold text-green-500">
                      +â‚¹{monthlyIncome.toLocaleString()}
                    </span>
                  </div>
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-muted-foreground">Expenses</span>
                    <span className="font-semibold text-red-500">
                      -â‚¹{monthlyExpenses.toLocaleString()}
                    </span>
                  </div>
                  <div className="pt-3 border-t border-border">
                    <div className="flex items-center justify-between">
                      <span className="text-sm font-medium">Net Savings</span>
                      <span className="font-bold text-lg gradient-title">
                        â‚¹{(monthlyIncome - monthlyExpenses).toLocaleString()}
                      </span>
                    </div>
                  </div>
                </div>
              </Card>
            </motion.div>

            {/* Tips */}
            <motion.div
              initial={{ opacity: 0, y: 20 }}
              animate={{ opacity: 1, y: 0 }}
              transition={{ delay: 0.9 }}
            >
              <Card className="p-6 glassmorphism bg-gradient-to-br from-teal-500/10 to-blue-500/10 border-teal-500/20">
                <h3 className="text-lg font-bold mb-3">ðŸ’¡ Smart Tip</h3>
                <p className="text-sm text-muted-foreground">
                  You&apos;re spending is on track! You&apos;re projected to save â‚¹
                  {(predictedBalance - currentBalance).toLocaleString()} this month.
                </p>
              </Card>
            </motion.div>
          </div>
        </div>
      </div>

      {/* Add Expense Modal */}
      <AnimatePresence>
        {showAddExpense && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
            onClick={() => setShowAddExpense(false)}
          >
            <motion.div
              initial={{ scale: 0.9, opacity: 0 }}
              animate={{ scale: 1, opacity: 1 }}
              exit={{ scale: 0.9, opacity: 0 }}
              onClick={(e) => e.stopPropagation()}
              className="glassmorphism bg-background rounded-2xl p-6 max-w-md w-full shadow-2xl"
            >
              <div className="flex items-center justify-between mb-6">
                <h2 className="text-2xl font-bold">Add Expense</h2>
                <button
                  onClick={() => setShowAddExpense(false)}
                  className="p-2 hover:bg-muted rounded-lg transition-colors"
                >
                  <X className="w-5 h-5" />
                </button>
              </div>
              <form onSubmit={handleAddExpense} className="space-y-4">
                <div>
                  <label className="block text-sm font-medium mb-2">
                    Amount (â‚¹)
                  </label>
                  <Input
                    type="number"
                    required
                    value={expenseForm.amount}
                    onChange={(e) =>
                      setExpenseForm({ ...expenseForm, amount: e.target.value })
                    }
                    className="h-12"
                    placeholder="0.00"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium mb-2">
                    Category
                  </label>
                  <Select
                    required
                    value={expenseForm.category}
                    onValueChange={(value) =>
                      setExpenseForm({ ...expenseForm, category: value })
                    }
                  >
                    <SelectTrigger className="h-12">
                      <SelectValue placeholder="Select category" />
                    </SelectTrigger>
                    <SelectContent>
                      {CATEGORIES.map((cat) => (
                        <SelectItem key={cat} value={cat}>
                          {cat.replace("-", " ").charAt(0).toUpperCase() +
                            cat.slice(1)}
                        </SelectItem>
                      ))}
                    </SelectContent>
                  </Select>
                </div>
                <div>
                  <label className="block text-sm font-medium mb-2">
                    Description
                  </label>
                  <Input
                    type="text"
                    required
                    value={expenseForm.description}
                    onChange={(e) =>
                      setExpenseForm({
                        ...expenseForm,
                        description: e.target.value,
                      })
                    }
                    className="h-12"
                    placeholder="What was this expense for?"
                  />
                </div>
                <div>
                  <label className="block text-sm font-medium mb-2">Date</label>
                  <Input
                    type="date"
                    required
                    value={expenseForm.date}
                    onChange={(e) =>
                      setExpenseForm({ ...expenseForm, date: e.target.value })
                    }
                    className="h-12"
                  />
                </div>
                <Button
                  type="submit"
                  className="w-full h-12 bg-gradient-to-r from-teal-600 to-blue-600 hover:from-teal-700 hover:to-blue-700 text-white"
                >
                  Add Expense
                </Button>
              </form>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Receipt Scanner Modal */}
      <AnimatePresence>
        {showReceiptScanner && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
            className="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4"
            onClick={() => setShowReceiptScanner(false)}
          >
            <motion.div
              initial={{ scale: 0.9, opacity: 0 }}
              animate={{ scale: 1, opacity: 1 }}
              exit={{ scale: 0.9, opacity: 0 }}
              onClick={(e) => e.stopPropagation()}
              className="glassmorphism bg-background rounded-2xl p-6 max-w-md w-full shadow-2xl"
            >
              <div className="flex items-center justify-between mb-6">
                <h2 className="text-2xl font-bold">Scan Receipt</h2>
                <button
                  onClick={() => setShowReceiptScanner(false)}
                  className="p-2 hover:bg-muted rounded-lg transition-colors"
                >
                  <X className="w-5 h-5" />
                </button>
              </div>
              <div className="text-center space-y-4">
                <div className="w-20 h-20 mx-auto bg-gradient-to-br from-teal-500 to-blue-500 rounded-2xl flex items-center justify-center">
                  <Upload className="w-10 h-10 text-white" />
                </div>
                <p className="text-muted-foreground">
                  Upload a receipt image and let AI extract the information
                </p>
                <input
                  type="file"
                  accept="image/*"
                  onChange={handleReceiptScan}
                  disabled={receiptScanning}
                  className="hidden"
                  id="receipt-input"
                />
                <label htmlFor="receipt-input">
                  <Button
                    type="button"
                    disabled={receiptScanning}
                    className="w-full h-12 bg-gradient-to-r from-teal-600 to-blue-600 hover:from-teal-700 hover:to-blue-700 text-white cursor-pointer"
                    onClick={() => document.getElementById("receipt-input").click()}
                  >
                    {receiptScanning ? "Scanning..." : "Choose Receipt"}
                  </Button>
                </label>
                <p className="text-xs text-muted-foreground">
                  Supports: JPG, PNG, HEIC (Max 5MB)
                </p>
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  );
}
